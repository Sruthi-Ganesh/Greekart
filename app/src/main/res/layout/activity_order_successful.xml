<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar_activity"
        android:orientation="horizontal"
        android:id="@+id/linearlayout_successful"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/successful_icon"
        android:src="@drawable/icons8ok24"
        />
    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="Your order is successful"
        android:textSize="24sp"

        android:layout_height="match_parent" />

    </LinearLayout>



   <ListView
       android:layout_width="wrap_content"
       android:paddingTop="8dp"
       android:layout_below="@id/linearlayout_successful"
       android:id="@+id/list_view_successful"
       android:layout_height="wrap_content"/>







</RelativeLayout>